    "lint": "cd client && npm run lint",
    "format": "cd client && npm run format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/azure-webpubsub.git"
  },
  "keywords": [
    "Tunnel",
    "Web",
    "PubSub"
