{
  "name": "awps-tunnel",
  "version": "1.0.0",
  "description": "A server tunnel to connect Azure Web PubSub and your local server",
  "main": "server/src/server.ts",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && npm run start",
    "start": "npm run server && npm run client",
