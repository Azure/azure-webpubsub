  "bugs": {
    "url": "https://github.com/Azure/azure-webpubsub/issues"
  },
  "homepage": "https://github.com/Azure/azure-webpubsub#readme",
  "devDependencies": {
    "@types/node": "^20.5.9",
    "typescript": "^5.1.6"
  }
}
