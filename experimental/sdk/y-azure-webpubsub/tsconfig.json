{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES6",
      "ESNext.BigInt",
      "DOM"
    ],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
  },
  "include": [
    "src",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}