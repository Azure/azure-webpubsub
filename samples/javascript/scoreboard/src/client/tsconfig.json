{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["webpack-env"],
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },

    "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.vue"],
    "exclude": ["../../node_modules"]
}
