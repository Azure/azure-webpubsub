{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "DOM",
            "DOM.Iterable"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noUnusedParameters": false,
        "baseUrl": "./",
        "jsx": "react-jsx",
        "paths": {
            "*": [
                "node_modules/vscode/*",
                "*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "gulpfile.ts",
        "test/testProject"
    ]
}
